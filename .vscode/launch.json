    "version": "0.2.0",
    "configurations": [
        {
            "name": "Scrape",
            "type": "debugpy",
            "request": "launch",
            "program": "scraper/scraping.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/venv/bin/python"
        },
        {
            "name": "Scenify",
            "type": "debugpy",
            "request": "launch",
            "program": "scenes/splitting.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/venv/bin/python"
        },
        {
            "name": "tts",
            "type": "debugpy",
            "request": "launch",
            "program": "audio/generate_tts.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "${workspaceFolder}/venv/bin/python"
        }
    ]
}
